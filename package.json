{
  "name": "node-crm-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@4.10.3",
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach -Apt run clean",
    "build": "yarn workspaces foreach -Apt run build",
    "dev": "yarn workspace @node-crm/backend dev",
    "start": "yarn workspace @node-crm/backend start",
    "test": "yarn workspaces foreach -Apt run test",
    "test:coverage": "yarn workspace @node-crm/backend test:coverage",
    "format": "yarn workspaces foreach -Apt run format"
  }
}
